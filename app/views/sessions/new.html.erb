<% title 'Log In' %>
<div class="card">
  <div class="card-header">
  <h1 class='text-danger'>Log In</h1>
 </div>
  <%= form_tag login_path, class: 'form-horizontal' do %>

    <div class='text-danger'>
      <%= label_tag :email, nil ,class: "col-md-2 col-form-label" %>

      <div class="col-md-7">
        <%= text_field_tag :email, nil, class: 'form-control' %>
      </div>
    </div>

    <div class='text-danger'>
      <%= label_tag :password, nil ,class: "col-md-2 col-form-label" %>

      <div class=" col-md-7">
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row justify-content-center ">
    <div class='col-md-2'></div>
    <div class="pl-md-1 col-md-7">
        <%= submit_tag "Sign In", class: 'form-control btn btn-danger ' %>
      </div>
    </div>
    <div class='row justify-content-center'>
      <div class='col-md-3'></div>
      <div class=" col-md-3">
        <%= link_to('Facebook Login', '/auth/facebook', class: "btn btn-dark") %>
      </div>
    </div>
  <% end %>