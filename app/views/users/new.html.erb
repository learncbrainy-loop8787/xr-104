<% title 'Sign Up' %>

    <h1 class="text-success">You've been drafted!</h1>

    <% if @user.errors.any? %>
        <div class="alert alert-danger" role="alert">
</div>
            <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from saving:</h2>
                <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
        </div>
    <% end %>
<div class="container-fluid">

<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>


 

 <div class="form-group">
        <%= f.label :General, "Check box if you are an general", class: 'text-danger' %>
        <%= f.check_box :general, class: 'form-control col-md-1' %>
        <div class="col-md-6"></div>
    </div>


    <div class="form-group">
        <%= f.label :code_name, class: 'text-danger' %>
        <%= f.text_field :code_name, class: 'form-control col-md-10' %>
    </div>

    <div class="form-group">
        <%= f.label :email, class: 'text-danger' %>
        <%= f.text_field :email, class: 'form-control col-md-10' %>
    </div>

    <div class="form-group">   
        <%= f.label :password, class: 'text-danger' %>
        <%= f.password_field :password, class: 'form-control col-md-7'  %>
    </div>

    <div class="form-group">
        <%= f.label :password_confirmation, class: 'text-danger' %>
        <%= f.password_field :password_confirmation, class: 'form-control col-md-7' %>
    </div>

   

    <div class="form-group row justify-content-center ">
    <div class='col-md-2'></div>
    <div class="pl-md-1 col-md-7">
        <%= f.submit "Sign Up", class: 'form-control btn btn-danger ' %><br>
        </div>
    </div>
     </div>
<% end %>
